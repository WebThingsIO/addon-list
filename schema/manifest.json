{
  "type": "object",
  "required": [
    "author",
    "description",
    "gateway_specific_settings",
    "homepage_url",
    "id",
    "license",
    "manifest_version",
    "name",
    "version"
  ],
  "properties": {
    "author": {
      "type": "string",
      "minLength": 1
    },
    "content_scripts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "css": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "exclude_globs": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "exclude_matches": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "include_globs": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "js": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "matches": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "default_locale": {
      "type": "string",
      "minLength": 2
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "gateway_specific_settings": {
      "type": "object",
      "required": [
        "webthings"
      ],
      "properties": {
        "webthings": {
          "type": "object",
          "required": [
            "primary_type"
          ],
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "exec": {
              "type": "string",
              "minLength": 1
            },
            "primary_type": {
              "type": "string",
              "enum": [
                "adapter",
                "extension",
                "notifier"
              ]
            },
            "strict_min_version": {
              "type": "string",
              "pattern": "^(\\d+\\.\\d+\\.\\d+|\\*)$"
            },
            "strict_max_version": {
              "type": "string",
              "pattern": "^(\\d+\\.\\d+\\.\\d+|\\*)$"
            }
          }
        }
      }
    },
    "homepage_url": {
      "type": "string",
      "minLength": 11
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "license": {
      "type": "string",
      "minLength": 1
    },
    "manifest_version": {
      "type": "integer",
      "const": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "optional_permissions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "options": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object"
        },
        "schema": {
          "type": "object"
        }
      }
    },
    "options_ui": {
      "type": "object",
      "required": [
        "page"
      ],
      "properties": {
        "page": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "permissions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "short_name": {
      "type": "string",
      "maxLength": 12
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "web_accessible_resources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
