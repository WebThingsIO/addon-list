{
  "type": "object",
  "required": [
    "name",
    "display_name",
    "description",
    "author",
    "homepage",
    "license",
    "type",
    "packages"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "display_name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "author": {
      "type": "string",
      "minLength": 1
    },
    "homepage": {
      "type": "string",
      "minLength": 11
    },
    "license": {
      "type": "string",
      "minLength": 11
    },
    "type": {
      "type": "string",
      "enum": [
        "adapter",
        "notifier"
      ]
    },
    "packages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "architecture",
          "language",
          "version",
          "url",
          "checksum",
          "api"
        ],
        "properties": {
          "architecture": {
            "type": "string",
            "enum": [
              "any",
              "darwin-x64",
              "linux-arm",
              "linux-arm64",
              "linux-ia32",
              "linux-x64",
              "openwrt-linux-arm_cortex-a7_neon-vfpv4",
              "openwrt-linux-arm_cortex-a9_vfpv3",
              "win32-ia32",
              "win32-x64"
            ]
          },
          "language": {
            "type": "object",
            "required": [
              "name",
              "versions"
            ],
            "properties": {
              "name": {
                "type": "string",
                "enum": [
                  "nodejs",
                  "python",
                  "binary"
                ]
              },
              "versions": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          },
          "version": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "minLength": 11
          },
          "checksum": {
            "type": "string",
            "minLength": 64,
            "maxLength": 64,
            "pattern": "^[0-9a-f]{64}$"
          },
          "api": {
            "type": "object",
            "required": [
              "min",
              "max"
            ],
            "properties": {
              "min": {
                "type": "integer",
                "minimum": 1
              },
              "max": {
                "type": "integer",
                "minimum": 1
              }
            }
          },
          "testOnly": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
