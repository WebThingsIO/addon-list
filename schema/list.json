{
  "type": "object",
  "required": [
    "id",
    "name",
    "description",
    "author",
    "homepage_url",
    "license_url",
    "primary_type",
    "packages"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "author": {
      "type": "string",
      "minLength": 1
    },
    "homepage_url": {
      "type": "string",
      "minLength": 11
    },
    "license_url": {
      "type": "string",
      "minLength": 11
    },
    "primary_type": {
      "type": "string",
      "enum": [
        "adapter",
        "extension",
        "notifier"
      ]
    },
    "packages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "architecture",
          "language",
          "version",
          "url",
          "checksum",
          "gateway"
        ],
        "properties": {
          "architecture": {
            "type": "string",
            "enum": [
              "any",
              "darwin-x64",
              "linux-arm",
              "linux-arm64",
              "linux-ia32",
              "linux-x64"
            ]
          },
          "language": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "versions": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            },
            "if": {
              "properties": {
                "name": {
                  "enum": [
                    "nodejs",
                    "python"
                  ]
                }
              },
              "required": [
                "name"
              ]
            },
            "then": {
              "required": [
                "versions"
              ]
            },
            "else": {
              "if": {
                "properties": {
                  "name": {
                    "enum": [
                      "binary",
                      "none"
                    ]
                  }
                },
                "required": [
                  "name"
                ]
              },
              "then": true,
              "else": false
            },
            "additionalProperties": false
          },
          "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          },
          "url": {
            "type": "string",
            "minLength": 11
          },
          "checksum": {
            "type": "string",
            "minLength": 64,
            "maxLength": 64,
            "pattern": "^[0-9a-f]{64}$"
          },
          "api": {
            "type": "object",
            "required": [
              "min",
              "max"
            ],
            "properties": {
              "min": {
                "type": "integer",
                "minimum": 1
              },
              "max": {
                "type": "integer",
                "minimum": 1
              }
            }
          },
          "gateway": {
            "type": "object",
            "required": [
              "min",
              "max"
            ],
            "properties": {
              "min": {
                "type": "string",
                "pattern": "^(\\d+\\.\\d+\\.\\d+|\\*)$"
              },
              "max": {
                "type": "string",
                "pattern": "^(\\d+\\.\\d+\\.\\d+|\\*)$"
              }
            },
            "additionalProperties": false
          },
          "test_only": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
